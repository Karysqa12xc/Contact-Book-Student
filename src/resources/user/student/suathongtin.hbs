
    <div class="contact-details">
    <h2>Sửa thông tin học sinh</h2>
    <form id="contact-form">
        <label for="name">Họ tên:</label>
        <input type="text" id="name" name="name" value="{{name}}">
        
        <label for="phone">Điện thoại:</label>
        <input type="text" id="phone" name="phone" value="{{phone}}">
        
        <label for="address">Địa chỉ:</label>
        <input type="text" id="address" name="address" value="{{address}}">
        
        <label for="gender">Giới tính:</label>
        <select id="gender" name="gender">
            <option value="male" {{#if (eq gender 'male')}}selected{{/if}}>Nam</option>
            <option value="female" {{#if (eq gender 'female')}}selected{{/if}}>Nữ</option>
        </select>

        <label for="classCode">Mã lớp:</label>
        <input type="text" id="classCode" name="classCode" value="{{classCode}}">
        
        <button type="submit">Lưu</button>
    </form>
</div>

