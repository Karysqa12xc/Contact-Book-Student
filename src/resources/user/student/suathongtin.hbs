<div class="container">
    <h2>Sửa thông tin học sinh</h2>
    <form id="update-form" method="post" action="/students/edit/{{student.MaTaiKhoan}}">
        <div class="mb-3">
            <label for="name" class="form-label">Họ tên:</label>
            <input type="text" class="form-control" id="name" name="name" value="{{student.HoVaTen}}">
        </div>
        <div class="mb-3">
            <label for="phone" class="form-label">Điện thoại:</label>
            <input type="text" class="form-control" id="phone" name="phone" value="{{student.SoDienThoai}}">
        </div>
        <div class="mb-3">
            <label for="address" class="form-label">Địa chỉ:</label>
            <input type="text" class="form-control" id="address" name="address" value="{{student.DiaChi}}">
        </div>
        <div class="mb-3">
            <label for="gender" class="form-label">Giới tính:</label>
            <select class="form-select" id="gender" name="gender">
                <option value="male" {{#if (eq gender 'male')}}selected{{/if}}>Nam</option>
                <option value="female" {{#if (eq gender 'female')}}selected{{/if}}>Nữ</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="classCode" class="form-label">Mã lớp:</label>
            <input type="text" class="form-control" id="classCode" name="classCode" value="{{student.MaLop}}">
        </div>
        <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
</div>
