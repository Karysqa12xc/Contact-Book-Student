<div class="container12">
        <h2>Nhập Điểm Sổ Liên Lạc</h2>
        <form>
            <div class="form-group">
                <label for="class-select">Chọn Lớp:</label>
                <select id="class-select">
                    {{#each classes}}
                        <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="student-select">Chọn Học Sinh:</label>
                <select id="student-select">
                    {{#each students}}
                        <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="subject-score">Điểm Môn Học:</label>
                <input type="number" id="subject-score" placeholder="Nhập điểm...">
            </div>
            <button type="submit">Lưu Điểm</button>
        </form>
    </div>