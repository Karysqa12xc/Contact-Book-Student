{{#if (eq account.MaVaiTro '01AD')}}
<div class="container">
    <button type="button" 
    class="btn btn-primary" 
    data-bs-toggle="modal" 
    data-bs-target="#createAccount">
        Tạo Tài Khoản
    </button>
    {{!-- Popup tạo tài khoản --}}
    <div class="modal fade" id="createAccount" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Tạo lớp học</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="post" action="/admin/class-management">
                        <div class="mb-3">
                            <label for="class-name" class="col-form-label">Tên lớp:</label>
                            <input type="text" name="className" class="form-control" id="class-name">
                        </div>
                        <div class="mb-3">
                            <label class="col-form-label" for="selected-id">Sĩ số:</label>
                            <select class="form-select" name="quantityClass" id="selected-id">
                                <option selected>Chọn số lượng học sinh</option>
                                <option value="35">35 học sinh</option>
                                <option value="40">40 học sinh</option>
                                <option value="45">45 học sinh</option>
                                <option value="50">50 học sinh</option>
                            </select>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-success">Tạo</button>
                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Đóng</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {{!-- Phần cần sửa --}}
    <h1>Tạo tài khoản</h1>
    <form method="post">
        <div class="mb-3">
            <label class="form-label h4">Vai trò:</label>
            <select class="form-select" name="role">
                <option selected>Chọn vai trò</option>
                {{#each roles}}
                <option value="{{MaVaiTro}}">{{TenVaiTro}}</option>
                {{/each}}
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label h4">Tên tài khoản: </label>
            <input type="text" name="username" class="form-control">
        </div>
        <div class="mb-3">
            <label class="form-label h4">Mật khẩu: </label>
            <input type="password" name="password" class="form-control">
        </div>

        <div class="mb-3">
            <label class="form-label h4">Nhập lại mật khẩu: </label>
            <input type="password" class="form-control">
        </div>
        <div class="mb-3">
            <label class="form-label h4">Họ và Tên: </label>
            <input type="text" name="fNameAndlName" class="form-control">
        </div>
        <div class="mb-3">
            <label class="form-label h4">Số điện thoại</label>
            <input type="tel" name="telephone" class="form-control">
        </div>
        <div class="mb-3">
            <label class="form-label h4">Địa chỉ:</label>
            <input type="text" name="address" class="form-control">
        </div>
        <div class="mb-3">
            <label class="form-label h4">Năm sinh</label>
            <input type="date" name="birth" class="form-control">
        </div>
        <div class="mb-3">
            <label class="form-label h4">Giới tính:</label> <br>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1"
                    value="true">
                <label class="form-check-label" for="inlineRadio1">Nam</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1"
                    value="false">
                <label class="form-check-label" for="inlineRadio1">Nữ</label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Tạo</button>
    </form>
</div>
{{else}}
<h1 style="color: red;">Bạn không có quyền truy cập!!!!</h1>
{{/if}}